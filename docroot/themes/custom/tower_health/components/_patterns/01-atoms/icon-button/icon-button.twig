{% if variation == "modal" %}
  {{ attach_library('tower_health/modal') }}
  <a href="#{{modal.reference}}" class="icon-button modal {% if modal.type %}modal--{{modal.type}}{% endif %} {% if animated %} js-section-animation{% endif %}">
{% else %}
  <a class="icon-button {% if variation %}icon-button--{{variation}}{% endif %}{% if animated %} js-section-animation{% endif %}" href="{{ url }}" {% if target == "_blank" %}target="_blank"{% endif %}>
{% endif %}
  {% if button_icon is not empty %}
    <span class="icon-button__container">{% include button_icon %}</span>
  {% endif %}
  {{ text }}
</a>

{% if variation == "modal" %}
  <div id="{{modal.reference}}" class="modal__inline-window">
    <div class="modal__iframe">
      {% block iframe %}
        Placeholder for iframe
      {% endblock %}
    </div>
    {{ modal.content }}
  </div>
{% endif %}
