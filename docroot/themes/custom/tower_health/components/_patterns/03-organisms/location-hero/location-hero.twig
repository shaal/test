<div class="location-hero js-section-animation">
  <div class="location-hero__container">
    <div class="location-hero__content {% if img %}image{% endif %}">
      <span class="location-label">{{ type }}</span>
      <h1 class="location-hero__title">{{ name }}</h1>
      <div class="location-details">
        <div class="location-details__item">
          <span class="location-details__label">Address</span>
          <span class='location-details__info'>{{ address_1 }}</span>
          <span class='location-details__info'>{{ address_2 }}</span>
          {% include "@atoms/icon-button/icon-button.twig" with {
            "url": directions.url,
            "icon": directions.icon,
            "text": directions.text,
            "variation": directions.variation,
          } %}
        </div>
        <div class="location-details__item">
          {% for phone in phones %}
            {% if phone.label %}
              <span class="location-details__label">{{ phone.label }}</span>
            {% endif %}
            {% for item in phone.numbers %}
              <a class="location-details__number" href="tel:+1{{item.number}}">{% if item.label %}{{item.label}}{% else %}{{item.number}}{% endif %}</a>
            {% endfor %}
          {% endfor %}
        </div>
      </div>
    </div>
    {% if img %}
      <div class="location-hero__image">
        {% include "@molecules/image-background/image-background.twig" with {
          "img.src": img.src,
          "img.src": img.alt,
          "classes": classes,
        } %}
      </div>
    {% endif %}
  </div>
</div>
