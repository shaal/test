<div class="teaser location js-section-animation">

  <div class="teaser__image-container">
    <div class="teaser__image">
      <a href="{{ url }}"><img src={% if location.img %}"{{ location.img.src }}" alt="{{ location.img.alt }}"{% else %}"../../images/people/provider-placeholder.png" alt="{{ location.details.name }}"{% endif %} ></a>
    </div>
  </div>

  <h2 class="teaser__name"><a href="{{ url }}">{{ location.details.name }}</a></h2>

  <div class="teaser__content">
    <div class="teaser__content__info">
      <div class="teaser__section">
        {% if location.details.address1 or location.details.address2 %}
          <span class="teaser-label">Address</span>
          <span class="teaser__row">{{ location.details.address1 }}</span>
          <span class="teaser__row">{{ location.details.address2 }}</span>
        {% endif %}
        
        {% if location.details.hours %}
          <a class="teaser__row-link" href="{{ url }}">Hours</a>
        {% endif %}
      </div>
      <div class="teaser__section">
        {% if location.details.phone %}
          <span class="teaser-label">Phone</span>
          <a href="tel:+1{{ location.details.phone }}">{{ location.details.phone }}</a>
        {% endif %}
        {% if location.details.fax %}
          <span class="teaser-label">Fax</span>
          {{ location.details.fax }}
        {% endif %}
      </div>
    </div>
    <div class="teaser__button">
      {% include "@atoms/icon-button/icon-button.twig" with {
        "url": location.link.href,
        "icon": location.link.icon,
        "text": location.link.text,
        "variation": "small",
      } %}
    </div>
  </div>
</div>
