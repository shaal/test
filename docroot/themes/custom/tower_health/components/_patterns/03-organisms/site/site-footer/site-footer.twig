<footer class="footer">
  <div class="footer-top">
    <div class="footer__info">
      {% include "@atoms/04-images/00-image/figure.twig" with {
        img_src: "../../images/TowerHealth_H.svg",
        img_alt: "Tower Health Logo",
        img_url: logo_link_url|default('/'),
      } %}
      <div>
        <div class="footer__info__social">
          <a href="{{ social.facebook }}">
            {% include "social-facebook.svg" %}
          </a>
          <a href="{{ social.facebook }}">
            {% include "social-twitter.svg" %}
          </a>
          <a href="{{ social.gplus }}">
            {% include "social-gplus.svg" %}
          </a>
          <a href="{{ social.linkedin }}">
            {% include "social-linkedin.svg" %}
          </a>
          <a href="{{ social.youtube }}">
            {% include "social-youtube.svg" %}
          </a>
          <a href="{{ social.instagram }}">
            {% include "social-instagram.svg" %}
          </a>
          <a href="{{ social.pinterest }}">
            {% include "social-pinterest.svg" %}
          </a>
        </div>
        <div class="footer__info__contact">
          {{ contact.address }}
          <a href="tel:{{contact.phone}}">{{ contact.phone }}</a>
        </div>
      </div>
    </div>
    <div class="footer__links">
      {% for section in sections %}
        <div class="footer__links__section">
          <span class="footer__links__section__title">
            {{ section.title }}
          </span>
          {% for link in section.links %}
            <a href="{{ link.href }}">{{ link.title }}</a>
          {% endfor %}
        </div>
      {% endfor %}
    </div>
  </div>
  <div class="footer-bottom">
    <div class="footer__details">
      {% for detail in details %}
        <a href="{{ detail.href }}">{{ detail.title }}</a>
      {% endfor %}
    </div>
    <div class="footer__legal">
      {{ legal }}
    </div>
  </div>
</footer>
