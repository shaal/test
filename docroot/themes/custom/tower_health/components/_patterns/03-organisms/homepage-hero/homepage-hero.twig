<div class="homepage-hero">
  <div class="homepage-hero__outline"></div>
  <div class="homepage-hero__content">
    <h1>
      <span class="title--first">{{ title_1 }}</span>
      <span class="title--middle">{{ title_2 }}</span>
      <span class="title--last">{{ title_3 }}</span>
    </h1>
    <h2>{{ subtitle}} </h2>
    <div class="homepage-hero__content__form">
      <label for="provider-search">Search Providers</label>
      <input id="provider-search" placeholder="Search by Name, Specialty, or Condition">
      <button class="button button--primary" type="submit">Search Providers</button>
    </div>
  </div>
  <div class="homepage-hero__image">
    <div class="homepage-hero__image__background"></div>
    <img src="{{img.src}}" alt="{{img.alt}}" />
  </div>
</div>
