<div class="teaser-list">
  {% for teaser in teasers %}
    {% if teaser.type == "provider" %}
      {% include "@organisms/teasers/provider-teaser/provider-teaser.twig" with {
          "provider": teaser,
        } %}
    {% elseif teaser.type == "location" %}
      {% include "@organisms/teasers/location-teaser/location-teaser.twig" with {
          "location": teaser,
        } %}
    {% elseif teaser.type == "article" %}
      {% include "@organisms/teasers/article-teaser/article-teaser.twig" with {
          "article": teaser,
        } %}
    {% else %}
      {% include "@organisms/teasers/basic-teaser/basic-teaser.twig" with {
          "basic": teaser,
        } %}
    {% endif %}
  {% endfor %}
</div>
