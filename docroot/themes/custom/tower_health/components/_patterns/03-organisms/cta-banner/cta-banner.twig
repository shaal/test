<section class="cta-banner">
  <div class="cta-banner__image">
    {% include "@molecules/image-background/image-background.twig" with {
      "img.src": img.src,
      "img.src": img.alt,
      "classes": classes,
    } %}
  </div>
  <div class="cta-banner__content">
    <button class="button button--alt" type="submit">Chat with Us</button>
    <h2 class="cta-banner__title">
      <span>{{ title_1 }}</span>
      {% if title_2 %}
      <span>{{ title_2 }}</span>
      {% endif %}
    </h2>
  </div>
</section>
