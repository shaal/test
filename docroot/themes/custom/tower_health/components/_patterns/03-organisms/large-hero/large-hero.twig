<div class="large-hero js-section-animation">
  <div class="large-hero__container">
    <div class="large-hero__content">
      {% if title_as_label == true %}
        <h1 class='large-hero__label'>{{ title }}</h1>
        <h2 class='large-hero__title'>{{ subtitle }}</h2>
      {% else %}
        {% if subtitle %}
        <span class='large-hero__label'>{{ subtitle }}</span>
        {% endif %}
        <h1 class='large-hero__title'>{{ title }}</h1>
      {% endif %}
      {% if lead %}
        <div class='large-hero__desc'>
          {{ lead }}
        </div>
      {% endif %}
      {% if link %}
        <a class="button" href="{{ link.url }}">{{ link.label }}</a>
      {% endif %}
    </div>
    <div class="large-hero__image">
      {% block image_background %}
        {% include "@molecules/image-background/image-background.twig" with {
          "img.src": img.src,
          "img.src": img.alt,
          "classes": classes,
        } %}
      {% endblock %}
    </div>
  </div>
</div>
