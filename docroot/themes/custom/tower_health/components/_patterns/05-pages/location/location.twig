{% embed "@templates/_default.twig" with {
  full_width: true
} %}

  {% block page_content %}

    {% include "@organisms/location-hero/location-hero.twig" with {
      type: hero.type,
      name: hero.name,
      address_1: hero.address_1,
      address_2: hero.address_2,
      directions: hero.directions,
      phone: hero.phone,
      numbers: hero.numbers,
      img: hero.img,
      classes: hero.classes,
    } %}

    <div class="menu-wrapper">
      {% include "@molecules/link-list/link-list.twig" with {
        title: link_list.title,
        items: link_list.items,
      } %}
      {% include "@molecules/menus/side-menu/side-menu.twig" with {
        items: section_items
      } %}
    </div>

    {% include "@organisms/box-links/box-links.twig" with {
      boxes: boxes
    } %}

    {% include "@organisms/image-with-callout/image-with-callout.twig" with {
      img: image_callout.img,
      title: image_callout.title,
      text: image_callout.text,
      link: image_callout.link,
    } %}
  {% endblock %}

{% endembed %}
