{% embed "@templates/_default.twig" with {
  page_header: TRUE,
  top_sidebar: TRUE,
  bottom_sidebar: FALSE,
  full_width: false,
  page_background: true,
  page_content: TRUE
}%}

  {% block page_header %}

    {% include "@organisms/provider-header/provider-header.twig" %}
  {% endblock %}

  {% block top_page_sidebar %}
    <div class="sidebar--growth js-section-animation">
      {% include "@molecules/provider-details/provider-details.twig" with {
        detail: language,
        'detail.sidebar': 'true'
      } %}

      {% include "@molecules/provider-details/provider-details.twig" with {
        detail: contact,
        'detail.sidebar': 'true'
      } %}

      {% include "@molecules/provider-details/provider-details.twig" with {
        detail: insurance,
        'detail.sidebar': 'true'
      } %}

      {% include "@molecules/provider-details/provider-details.twig" with {
        detail: employed,
        'detail.sidebar': 'true'
      } %}

      {% include "@molecules/provider-details/provider-details.twig" with {
        detail: affiliation,
        'detail.sidebar': 'true'
      } %}
    </div>
  {% endblock %}

  {% block page_content %}
    {% include "@molecules/provider-details/provider-details.twig" with {
      detail: specialties
    } %}

    {% include "@molecules/provider-details/provider-details.twig" with {
      detail: focus
    } %}

    {% include "@molecules/provider-details/provider-details.twig" with {
      detail: locations
    } %}

    {% include "@molecules/provider-details/provider-details.twig" with {
      detail: certification
    } %}

    {% include "@molecules/provider-details/provider-details.twig" with {
      detail: education
    } %}

    {% include "@organisms/review-listing/review-listing.twig" with {
      count: review_amt,
      icon: "star.svg"
    } %}

  {% endblock %}

{% endembed %}
