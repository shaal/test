{% embed "@templates/_default.twig" with {
  page_header: TRUE,
  full_width: true
}%}

  {% block page_header %}
    <div class="header__wrapper js-section-animation">
      {% include "@organisms/basic-header/basic-header.twig" with {
        breadcrumb: header.breadcrumb,
        class: header.class,
        } %}
      {% include "@organisms/listings/listing-search/listing-search.twig" with {
        label: search.label,
        placeholder: search.placeholder,
        button: search.button,
        } %}
      {% include "@organisms/listings/listing-filter/listing-filter.twig"  with {
        filters: filters,
        filter_radios: filter_radios
        } %}
    </div>
  {% endblock %}

  {% block page_content %}
    {% include "@organisms/listings/teaser-list/teaser-list.twig" with {
        "teasers": locations,
      } %}
    {% include "@molecules/pagination/pagination.twig" %}
    {% include "@organisms/listings/listing-cta/listing-cta.twig" with {
        "title": cta.title,
        "text": cta.text,
        "link": cta.link,
      } %}
  {% endblock %}

{% endembed %}
